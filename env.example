# Directory for storing run outputs
RUNS_DIR=./runs

# Directory for active checkpoint
ACTIVE_CHECKPOINT=./active_checkpoint

# -----------------
# Logging & Debugging
# -----------------

# Logging level: DEBUG, INFO, WARNING, ERROR
LOG_LEVEL=INFO

